    <sql id="selectCmsFilesVo">
        select id, user_id, share_status, resource_size, resource_type, resource_url, resource_dimensions, resource_date, resource_alias, upload_oss_id, suffix, video_cover_id, is_display, create_by, create_time, is_delete from cms_files
    </sql>

    <select id="selectCmsFilesList" parameterType="CmsFiles" resultMap="CmsFilesResult">
        <include refid="selectCmsFilesVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="shareStatus != null  and shareStatus != ''"> and share_status = #{shareStatus}</if>
            <if test="resourceSize != null "> and resource_size = #{resourceSize}</if>
            <if test="resourceType != null  and resourceType != ''"> and resource_type = #{resourceType}</if>
