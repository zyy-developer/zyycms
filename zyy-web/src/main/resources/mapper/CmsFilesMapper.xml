    <update id="updateCmsFiles" parameterType="CmsFiles">
        update cms_files
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="shareStatus != null and shareStatus != ''">share_status = #{shareStatus},</if>
            <if test="resourceSize != null">resource_size = #{resourceSize},</if>
            <if test="resourceType != null">resource_type = #{resourceType},</if>
            <if test="resourceUrl != null">resource_url = #{resourceUrl},</if>
            <if test="resourceDimensions != null">resource_dimensions = #{resourceDimensions},</if>
