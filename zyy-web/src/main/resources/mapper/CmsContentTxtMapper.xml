<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyy.web.mapper.CmsContentTxtMapper">

    <resultMap type="CmsContentTxt" id="CmsContentTxtResult">
        <result property="id"    column="id"    />
        <result property="contentId"    column="content_id"    />
        <result property="text"    column="text"    />
        <result property="attrKey"    column="attr_key"    />
    </resultMap>

    <sql id="selectCmsContentTxtVo">
        select id, content_id, text, attr_key from cms_content_txt
    </sql>

    <select id="selectCmsContentTxtList" parameterType="CmsContentTxt" resultMap="CmsContentTxtResult">
        <include refid="selectCmsContentTxtVo"/>
        <where>
            <if test="contentId != null "> and content_id = #{contentId}</if>
            <if test="text != null  and text != ''"> and text = #{text}</if>
            <if test="attrKey != null  and attrKey != ''"> and attr_key = #{attrKey}</if>
        </where>
    </select>

    <select id="selectCmsContentTxtById" parameterType="Long" resultMap="CmsContentTxtResult">
        <include refid="selectCmsContentTxtVo"/>
        where id = #{id}
    </select>

    <select id="selectCmsContentTxtByContentId" parameterType="Long" resultMap="CmsContentTxtResult">
        <include refid="selectCmsContentTxtVo"/>
        where content_id = #{contentId}
    </select>

    <insert id="insertCmsContentTxt" parameterType="CmsContentTxt" useGeneratedKeys="true" keyProperty="id">
        insert into cms_content_txt
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="contentId != null">content_id,</if>
            <if test="text != null">text,</if>
            <if test="attrKey != null">attr_key,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="contentId != null">#{contentId},</if>
            <if test="text != null">#{text},</if>
            <if test="attrKey != null">#{attrKey},</if>
         </trim>
    </insert>

    <update id="updateCmsContentTxt" parameterType="CmsContentTxt">
        update cms_content_txt
        <trim prefix="SET" suffixOverrides=",">
            <if test="contentId != null">content_id = #{contentId},</if>
            <if test="text != null">text = #{text},</if>
            <if test="attrKey != null">attr_key = #{attrKey},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCmsContentTxtById" parameterType="Long">
        delete from cms_content_txt where id = #{id}
    </delete>

    <delete id="deleteCmsContentTxtByIds" parameterType="String">
        delete from cms_content_txt where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteCmsContentTxtByContentId" parameterType="Long">
        delete from cms_content_txt where content_id = #{contentId}
    </delete>
</mapper>
