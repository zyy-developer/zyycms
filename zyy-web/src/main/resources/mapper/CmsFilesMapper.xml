            <if test="resourceDate != null "> and resource_date = #{resourceDate}</if>
            <if test="resourceAlias != null  and resourceAlias != ''"> and resource_alias = #{resourceAlias}</if>
            <if test="uploadOssId != null "> and upload_oss_id = #{uploadOssId}</if>
            <if test="suffix != null  and suffix != ''"> and suffix = #{suffix}</if>
            <if test="videoCoverId != null "> and video_cover_id = #{videoCoverId}</if>
            <if test="isDisplay != null  and isDisplay != ''"> and is_display = #{isDisplay}</if>
            <if test="isDelete != null  and isDelete != ''"> and is_delete = #{isDelete}</if>
        </where>
    </select>
    
    <select id="selectCmsFilesById" parameterType="Long" resultMap="CmsFilesResult">
        <include refid="selectCmsFilesVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertCmsFiles" parameterType="CmsFiles">
