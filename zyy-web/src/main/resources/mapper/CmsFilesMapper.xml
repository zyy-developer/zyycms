<mapper namespace="com.zyy.web.mapper.CmsFilesMapper">
    
    <resultMap type="CmsFiles" id="CmsFilesResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="shareStatus"    column="share_status"    />
        <result property="resourceSize"    column="resource_size"    />
